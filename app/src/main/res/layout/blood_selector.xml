<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Choose blood group"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginLeft="100dp"/>

    <ImageButton
        android:id="@+id/a_plus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/blood_drop_a_plus"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/o_plus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/blood_drop_o_plus"
        android:layout_toRightOf="@id/a_plus"
        android:background="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/ab_plus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/blood_drop_ab_plus"
        android:layout_toRightOf="@id/o_plus"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/b_plus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/blood_drop_b_plus"
        android:layout_toRightOf="@id/ab_plus"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/a_minus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/a_plus"
        android:layout_marginTop="20dp"
        android:src="@drawable/blood_drop_a_minus"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/o_minus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/a_plus"
        android:layout_marginTop="20dp"
        android:src="@drawable/blood_drop_o_minus"
        android:layout_toRightOf="@id/a_minus"
        android:background="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/ab_minus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/a_plus"
        android:layout_marginTop="20dp"
        android:src="@drawable/blood_drop_ab_minus"
        android:layout_toRightOf="@id/o_minus"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/b_minus"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_below="@id/a_plus"
        android:layout_marginTop="20dp"
        android:src="@drawable/blood_drop_b_minus"
        android:layout_toRightOf="@id/ab_minus"
        android:background="@android:color/transparent"/>
    
</RelativeLayout>